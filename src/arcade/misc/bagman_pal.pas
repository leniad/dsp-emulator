procedure bagman_update_pal;
var
  rowoffs:word;
  row,column,val:byte;
begin
 // calculate all rows ANDs
	for row:=0 to 63 do begin
		rowoffs:=row*32;
		val:=1; //prepare for AND
		for column:=0 to 31 do begin
			if (fusemap[rowoffs+column]=0) then val:=val and columnvalue[column];
		end;
		andmap[row]:=val;
	end;
  // I/O pin #19 */
	val:=0; // prepare for OR
	for row:=1 to 7 do val:=val or andmap[row];
	if (andmap[0]=1) then begin
		columnvalue[2]:=1-val;
		columnvalue[3]:=val;
		outvalue[0]:=1-val;
	end else begin
		// pin is in INPUT configuration so it doesn't create output...
		columnvalue[2]:=0;
		columnvalue[3]:=1;
	end;
  // O pin #18 (D1)
	val:=0; // prepare for OR
	for row:=8 to 15 do val:=val or andmap[row];
	columnvalue[6]:=1-val;
	columnvalue[7]:=val;
	outvalue[1]:=1-val;
  // O pin #17 (D2)
	val:=0; // prepare for OR
	for row:=16 to 23 do val:=val or andmap[row];
	columnvalue[10]:=1-val;
	columnvalue[11]:=val;
	outvalue[2]:=1-val;
  // O pin #16 (D3)
	val:=0; // prepare for OR
	for row:=24 to 31 do val:=val or andmap[row];
	columnvalue[14]:=1-val;
	columnvalue[15]:=val;
	outvalue[3]:=1-val;
  // O pin #15 (D4)
	val:=0; // prepare for OR
	for row:=32 to 39 do val:=val or andmap[row];
	columnvalue[18]:=1-val;
	columnvalue[19]:=val;
	outvalue[4]:=1-val;
  // O pin #14 (D5)
	val:=0; // prepare for OR
	for row:=40 to 47 do val:=val or andmap[row];
	columnvalue[22]:=1-val;
	columnvalue[23]:=val;
	outvalue[5]:=1-val;
  // O pin #13 (D6)
	val:=0; //prepare for OR
	for row:=48 to 55 do val:=val or andmap[row];
	columnvalue[26]:=1-val;
	columnvalue[27]:=val;
	outvalue[6]:=1-val;
  // I/O pin #12
	val:=0; // prepare for OR
	for row:=57 to 63 do val:=val or andmap[row];
	if (andmap[56]=1) then begin
		columnvalue[30]:=1-val;
		columnvalue[31]:=val;
		outvalue[7]:=1-val;
	end else begin
		// pin is in INPUT configuration so it doesn't create output...
		columnvalue[30]:=0;
		columnvalue[31]:=1;
	end;
end;

procedure bagman_pal16r6_w(posicion,valor:byte);
var
  line:byte;
begin
	line:=posicion*4;
	columnvalue[line]:=valor and 1;
	columnvalue[line+1]:=1-(valor and 1);
end;

function bagman_pal16r6_r:byte;
begin
	bagman_update_pal;
	bagman_pal16r6_r:=outvalue[6]+(outvalue[5] shl 1)+(outvalue[4] shl 2)+
		(outvalue[3] shl 3)+(outvalue[2] shl 4)+(outvalue[1] shl 5);
{ Bagman schematics show that this is right mapping order of PAL outputs to bits.
 This is the PAL 16R6 shown almost in the middle of the schematics.
 The /RD4 line goes low (active) whenever CPU reads from memory address a000.}
end;

